{
  "name": "sanctuanimal",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --no-daemon",
    "build:watch": "turbo run build:watch --no-daemon",
    "vercel-build": "turbo run  vercel-build --no-daemon",
    "dev": "turbo run dev --parallel --no-daemon",
    "lint": "turbo run lint --no-daemon",
    "format": "prettier --check \"**/*.{ts,tsx,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,md}\"",
    "start:emulators": "firebase emulators:start --import=./emulators-data --export-on-exit"
  },
  "devDependencies": {
    "@sanctuanimal/eslint-config": "workspace:*",
    "prettier": "^2.8.7",
    "turbo": "^1.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {},
  "packageManager": "pnpm@8.1.0"
}
